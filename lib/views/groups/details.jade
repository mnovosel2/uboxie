extends ../default/layout
block content
	.container
		.row
			.search-container.col-xs-4.col-md-4
				form(action='', method='POST', role='form', id="searchTrackForm")
					.form-group
						input.form-control(type='text', placeholder='Find song', id="query")
				#result-list
			#playback
			#group-queue.list-group.col-md-5
block custom-scripts
	script.
		playback.instanciatePlayback("#playback");
		$(document).on('keyup','#query', function(e){
			e.preventDefault();
			var query=$(this).val().trim();
			if(query==""){
				$('#result-list').empty();
			}
			if(query.length>=3){
				streamApi.getSearchResults(query).done(function(data){
					streamApi.createSearchResultList(data.result,"#result-list",{
						trackNameKey:"name",
						artistKey:"artist",
						iconKey:"icon",
						albumKey:"album",
						trackKey:"key"
					});
				});
			}
		});
		$(document).on('click','.result-item',function(e){
			e.preventDefault();
			var trackKey=$(this).data('key'),
				title=$(this).find('.song-title').text(),
				info=$(this).find('.song-info').text();
			playback.addToGroupQueue(title,info,trackKey,"#group-queue");
			// playback.playTrack(trackKey);
		})