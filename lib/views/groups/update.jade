extends ../default/layout
block content
	form(action='/api/1/groups/update' method='POST', id='updateGroupForm')
		.form-group
			input(type='hidden', placeholder='Group name...', id="name" name='id' value='#{id}')
			input(type="hidden" name="_method" value="put")
			input.form-control(type='text', placeholder='Group name...', id="name" name='groupName')
			input.form-control(type='text', placeholder='Rating...', id="name" name='rating')
			input.form-control.btn-primary(type='submit', value='Update', id="sbn-btn")